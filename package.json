    "tw-animate-css": "^1.4.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.27.0",
    "vite": "^6.2.5",
    "vite-plugin-compression": "0.5.1",
    "vite-plugin-mkcert": "1.17.9",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,html,css,scss,less}": [
      "prettier --write"
    ]
  }
