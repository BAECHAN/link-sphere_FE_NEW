{
  "name": "link-sphere-fe",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode localhost",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "start": "npm run preview",
    "dev:local": "npm run dev -- --mode localhost",
    "build:dev": "npm run build -- --mode development",
    "build:prod": "npm run build -- --mode production",
    "type-check": "tsc -b --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "check:fix": "npm run lint:fix && npm run format && npm run type-check",
    "validate": "npm run check:env && npm run check",
    "check:env": "node -e \"if (!require('fs').existsSync('.env')) { console.error('⚠️ .env missing'); process.exit(1); }\"",
    "clean": "rimraf dist node_modules/.vite node_modules/.tmp",
    "prepare": "husky",
    "postinstall": "npm run prepare",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-alert-dialog": "1.1.15",
